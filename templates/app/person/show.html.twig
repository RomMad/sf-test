{% extends 'base.html.twig' %}

{% block title %}{{ person.fullname }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4">{{ person.fullname }}</h1>

        {{ include('_shared/_flash_message.html.twig') }}

        <table class="table">
            <tbody>
                <tr>
                    <th>{{ 'lastname.label'|trans }}</th>
                    <td>{{ person.lastname }}</td>
                </tr>
                <tr>
                    <th>{{ 'firstname.label'|trans }}</th>
                    <td>{{ person.firstname }}</td>
                </tr>
                <tr>
                    <th>{{ 'birthdate.label'|trans }}</th>
                    <td>{{ person.birthdate ? person.birthdate|date('d/m/Y') }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_person_index') }}" class="btn btn-secondary my-2">
            {{ 'back_to_directory.label'|trans }}
        </a>

        <a href="{{ path('app_person_edit', {id: person.id}) }}" class="btn btn-primary my-2">
            {{ 'edit.label'|trans }}
        </a>

        {{ include('app/person/_delete_form.html.twig') }}
    </div>
{% endblock %}
